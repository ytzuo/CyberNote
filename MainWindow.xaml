<Window x:Class="CyberNote.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CyberNote 桌面组件"
        Width="350"
        Height="250"
        
    WindowStyle="None"
    ResizeMode="NoResize"
    Background="White"
    AllowsTransparency="True"
    Topmost="True"
    ShowInTaskbar="False">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" Grid.ColumnSpan="3"
                BorderThickness="5" 
                BorderBrush="#80CCCCCC"     
                Background="#80CCCCCC"
            MouseLeftButtonDown="DragBorder_MouseLeftButtonDown"/>

        <Grid 
              Background="#FFFFFFFF"         
                Margin="5,10,5,0" Grid.ColumnSpan="3" Grid.RowSpan="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="20" />
                <!-- 固定高度 -->
            </Grid.RowDefinitions>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="8" Grid.Row="0">
                <TextBlock Text="CyberNote" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Foreground="#2C3E50"/>
                <TextBlock Text="仅点击边框可拖动" 
                           FontSize="12" 
                           Foreground="#7F8C8D"/>
                
            </StackPanel>
            <Button Grid.Row="1"
                Content="底部按钮" 
                Height="20">
            </Button>
        </Grid>
    </Grid>
</Window>
<Window x:Class="CyberNote.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CyberNote 桌面组件"
        Width="350"
        Height="250"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        x:Name="MainWin"
        LocationChanged="Window_LocationChanged">

    <Grid>
        <!-- 拖动边框 -->
        <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" Grid.ColumnSpan="3"
                BorderThickness="10" 
                BorderBrush="#DDDDDD"     
                Background="#FFFFFF"
                MouseLeftButtonDown="DragBorder_MouseLeftButtonDown"/>

        <!-- 主内容区域 -->
        <Grid Grid.Row="1" Grid.Column="1"
              Background="White"         
              Margin="5,15,5,0"
              x:Name="ContentGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="97*" />
                <RowDefinition Height="13*"/>
                <RowDefinition Height="20" />
            </Grid.RowDefinitions>

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,91,0,0" Grid.Row="0">
                <TextBlock Text="CyberNote" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Foreground="#2C3E50"/>
                <TextBlock Text="仅点击边框可拖动" 
                           FontSize="12" 
                           Foreground="#7F8C8D"/>
            </StackPanel>

            <Button Grid.Row="2"
                    Content="底部按钮" 
                    Height="20"
                    Click="ExtendBtn_Clicked"
                    x:Name="ExpendBtn"/>
        </Grid>

        <!-- ✅ 用 Popup 实现“外部更宽面板” -->
        <Popup x:Name="WidePopup"
               Placement="Bottom"
               PlacementTarget="{Binding ElementName=ExpendBtn}"
               VerticalOffset="5"  
               StaysOpen="True"
               IsOpen="False">
            <Grid Width="450" Height="Auto">
                <Border Background="White"
                    BorderBrush="#DDDDDD"
                    BorderThickness="3">
                    <ScrollViewer>
                        <!-- 使用StackPanel包裹每一行的一到两个选项卡 -->
                    </ScrollViewer>
                </Border>

                <!-- ✅ 悬浮按钮：靠右下角 -->
                <Border Background="#FF2196F3"
                    Width="40"
                    Height="40"
                    CornerRadius="20"
                    MouseLeftButtonDown="FloatingButton_Click"

                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0,0,16,16"
                    Panel.ZIndex="1">
                    <TextBlock Text="＋"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="White"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Panel.ZIndex="1"/>
                </Border>
            </Grid>
        </Popup>
    </Grid>
</Window>
<!-- Views/TaskListView.xaml -->
<UserControl x:Class="CyberNote.Views.TaskListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="400">

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <!-- 修改 ItemsSource 绑定到控件自身的 Tasks 依赖属性 -->
        <ItemsControl ItemsSource="{Binding Tasks, RelativeSource={RelativeSource AncestorType=UserControl}}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- 任务内容文字，根据完成状态改变样式 -->
                        <TextBlock Grid.Column="0"
                                   Text="{Binding Content}"
                                   FontSize="14"
                                   VerticalAlignment="Center"
                                   TextWrapping="Wrap"
                                   TextTrimming="CharacterEllipsis">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#333333"/>
                                    <Setter Property="TextDecorations" Value="{x:Null}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Progress}" Value="True">
                                            <Setter Property="Foreground" Value="#888888"/>
                                            <Setter Property="TextDecorations" Value="Strikethrough"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <!-- 完成状态勾选框 -->
                        <CheckBox Grid.Column="1"
                                  IsChecked="{Binding Progress, Mode=TwoWay}"
                                  VerticalAlignment="Center"
                                  Margin="12,0,0,0"
                                  ToolTip="标记已完成"/>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>
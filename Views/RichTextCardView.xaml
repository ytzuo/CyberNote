<UserControl x:Class="CyberNote.Views.RichTextCardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="240" d:DesignWidth="320"
             x:Name="Root">

    <UserControl.Resources>
        <!-- 布尔值转可见性转换器 -->
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>
    
    <Border Background="{DynamicResource WindowBackgroundBrush}" Padding="12" CornerRadius="8" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 顶部：标题 -->
            <!-- 查看模式 -->
            <TextBlock Grid.Row="0"
                       Text="{Binding Title}"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TextPrimaryBrush}"
                       TextTrimming="CharacterEllipsis"
                       MouseLeftButtonDown="ViewElement_MouseLeftButtonDown"
                       Cursor="Hand"
                       Visibility="{Binding IsViewMode, ElementName=Root, Converter={StaticResource BoolToVis}}"/>
            
            <!-- 编辑模式 -->
            <TextBox Grid.Row="0"
                     Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                     FontSize="18"
                      FontWeight="SemiBold"
                      Foreground="{DynamicResource TextPrimaryBrush}"
                      BorderBrush="{DynamicResource PrimaryBrush}"
                      BorderThickness="0,0,0,2"
                     Background="Transparent"
                     LostFocus="EditElement_LostFocus"
                     KeyDown="EditElement_KeyDown"
                      Visibility="{Binding IsEditMode, ElementName=Root, Converter={StaticResource BoolToVis}}"
                      x:Name="TitleTextBox"
                      CaretBrush="{DynamicResource TextPrimaryBrush}"/>

            <!-- 中间：富文本编辑器 -->
            <!-- 查看模式 -->
            <ScrollViewer Grid.Row="1"
                          Margin="0,8,0,8"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Visibility="{Binding IsViewMode, ElementName=Root, Converter={StaticResource BoolToVis}}">
                <FlowDocumentScrollViewer x:Name="ContentViewer"
                                          IsToolBarVisible="False"
                                          VerticalScrollBarVisibility="Disabled"
                                          Background="Transparent"
                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                          MouseLeftButtonDown="ViewElement_MouseLeftButtonDown"
                                          PreviewMouseLeftButtonDown="ViewElement_MouseLeftButtonDown"
                                          Cursor="Hand"/>
            </ScrollViewer>
            
            <!-- 编辑模式 -->
            <RichTextBox Grid.Row="1"
                         x:Name="ContentEditor"
                         Margin="0,8,0,8"
                         VerticalScrollBarVisibility="Auto"
                         BorderBrush="{DynamicResource PrimaryBrush}"
                         BorderThickness="1"
                         Padding="4"
                         Background="Transparent"
                         Foreground="{DynamicResource TextPrimaryBrush}"
                         CaretBrush="{DynamicResource TextPrimaryBrush}"
                         LostFocus="EditElement_LostFocus"
                         KeyDown="EditElement_KeyDown"
                         Visibility="{Binding IsEditMode, ElementName=Root, Converter={StaticResource BoolToVis}}"
                         AcceptsReturn="True"
                         AcceptsTab="True"/>

            <!-- 底部：创建日期 -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding createDate, StringFormat='{}{0:yyyy-MM-dd}'}"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           FontSize="12"/>
                
                <!-- 编辑模式提示 -->
                <TextBlock Grid.Column="1"
                           Text="Esc退出"
                           Foreground="{DynamicResource PrimaryBrush}"
                           FontSize="10"
                           FontStyle="Italic"
                           Visibility="{Binding IsEditMode, ElementName=Root, Converter={StaticResource BoolToVis}}"/>
            </Grid>

            <!-- 悬浮新增按钮 -->
            <Button Grid.Row="1" Background="{DynamicResource PrimaryBrush}" 
                    Width="30" 
                    Height="30" 
                    BorderThickness="0"
                    Click="EnlargeBtn_Click" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Bottom" 
                    Margin="0,0,8,8" 
                    Panel.ZIndex="1" 
                    Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                    CornerRadius="15" 
                    SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PrimaryHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PrimaryPressedBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
                <TextBlock Text="⛶" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>
        </Grid>
    </Border>
</UserControl>

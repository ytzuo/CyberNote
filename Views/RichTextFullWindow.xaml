<Window x:Class="CyberNote.Views.RichTextFullWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="RichText" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        LocationChanged="Window_LocationChanged"
        SizeChanged="Window_SizeChanged">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#4CAF50"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5" SnapsToDevicePixels="True" Padding="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="BorderBrush" Value="#66C17A"/>
                                <Setter TargetName="bd" Property="Background" Value="#F8FFFA"/>
                                <Setter TargetName="bd" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#AA66C17A" BlurRadius="5" ShadowDepth="0" Opacity="0.6"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#E8F5E9"/>
                                <Setter TargetName="bd" Property="BorderBrush" Value="#4CAF50"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 顶部栏 -->
        <DockPanel Grid.Row="0" Margin="10">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                <TextBlock Text="标题：" FontWeight="SemiBold" FontSize="22" VerticalAlignment="Center"/>
                <TextBox Width="320" FontSize="22" Padding="10,6" BorderBrush="#CCCCCC" BorderThickness="1" FontWeight="Bold" Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <!-- 中间只留固定间隙 -->
            <Border Width="20" DockPanel.Dock="Left"/>

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                <Button Style="{StaticResource PrimaryButton}" Content=" 查看 " Click="ViewMode_Click"
                Visibility="{Binding IsEditMode, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVis}}"/>

                <Button Style="{StaticResource PrimaryButton}" Content=" 编辑 " Click="EditMode_Click"
                Visibility="{Binding IsViewMode, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVis}}"/>
            </StackPanel>
        </DockPanel>

        <!-- 内容区 -->
        <Grid Grid.Row="1" Margin="20">
            <!-- 查看模式 -->
            <FlowDocumentScrollViewer x:Name="Viewer"
                                      Visibility="{Binding IsViewMode, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVis}}"
                                      IsToolBarVisible="False"
                                      VerticalScrollBarVisibility="Auto"
                                      Background="White" />

            <!-- 编辑模式 -->
            <RichTextBox x:Name="Editor"
                         Visibility="{Binding IsEditMode, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVis}}"
                         VerticalScrollBarVisibility="Auto"
                         AcceptsReturn="True"
                         AcceptsTab="True"
                         BorderThickness="1"
                         BorderBrush="#4CAF50"
                         FontSize="14"
                         Padding="10" />
        </Grid>
        <!-- 右下角帮助按钮 -->
        <Button x:Name="InfoButton" Grid.Row="1" Background="#4CAF50" 
                Width="40" 
                Height="40" 
                BorderThickness="0"
                Click="FloatingInfoButton_Click" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Bottom" 
                Margin="0,0,50,50" 
                Panel.ZIndex="1" 
                Cursor="Hand">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                    CornerRadius="20" 
                    SnapsToDevicePixels="True">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#45A049"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#3D8B40"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
            <TextBlock Text="?" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Button>

        <!-- 帮助 Popup：向右展开 -->
        <Popup x:Name="InfoPopup"
               PlacementTarget="{Binding ElementName=InfoButton}"
               Placement="Right"
               StaysOpen="True"
               AllowsTransparency="True">
            <Border Background="#FFFFFF" BorderBrush="#4CAF50" BorderThickness="1" CornerRadius="8" Padding="12">
                <Border.Effect>
                    <DropShadowEffect Color="#AA66C17A" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
                </Border.Effect>
                <StackPanel MaxWidth="320">
                    <TextBlock Text="富文本快捷键" FontWeight="Bold" FontSize="16"/>
                    <TextBlock Text="· Ctrl + B：加粗" TextWrapping="Wrap" FontSize="15"/>
                    <TextBlock Text="· Ctrl + I：斜体" TextWrapping="Wrap" FontSize="15"/>
                    <TextBlock Text="· Ctrl + U：下划线" TextWrapping="Wrap" FontSize="15"/>
                    <TextBlock Text="· Ctrl + Z / Ctrl + Y：撤销 / 重做" TextWrapping="Wrap" FontSize="15"/>
                    <TextBlock Text="· Enter：换行；Tab：缩进；Shift+Tab：减少缩进" TextWrapping="Wrap" FontSize="15"/>
                    <TextBlock Text="· Esc：退出编辑并保存" TextWrapping="Wrap" FontSize="15"/>
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</Window>
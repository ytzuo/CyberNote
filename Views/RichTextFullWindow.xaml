<Window x:Class="CyberNote.Views.RichTextFullWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="RichText" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 顶部栏 -->
        <DockPanel Grid.Row="0" Margin="10">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                <TextBlock Text="标题：" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <TextBox Width="280" Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                <Button Content="查看" Padding="10,4" Click="ViewMode_Click"
                        Visibility="{Binding IsEditMode, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVis}}"
                        Margin="0,0,6,0"/>
                <Button Content="编辑" Padding="10,4" Click="EditMode_Click"
                        Visibility="{Binding IsViewMode, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVis}}"
                        Margin="0,0,6,0"/>
            </StackPanel>
        </DockPanel>

        <!-- 内容区 -->
        <Grid Grid.Row="1" Margin="10">
            <!-- 查看模式 -->
            <FlowDocumentScrollViewer x:Name="Viewer"
                                      Visibility="{Binding IsViewMode, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVis}}"
                                      IsToolBarVisible="False"
                                      VerticalScrollBarVisibility="Auto"
                                      Background="Transparent" />

            <!-- 编辑模式 -->
            <RichTextBox x:Name="Editor"
                         Visibility="{Binding IsEditMode, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVis}}"
                         VerticalScrollBarVisibility="Auto"
                         AcceptsReturn="True"
                         AcceptsTab="True"
                         BorderThickness="1"
                         BorderBrush="#4CAF50" />
        </Grid>
    </Grid>
</Window>
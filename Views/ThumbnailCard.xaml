<!-- Views\ThumbnailCard.xaml -->
<UserControl x:Class="CyberNote.Views.ThumbnailCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CyberNote.Converters"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="200">  

    <UserControl.Resources>
        <!-- 截断字符串的转换器（推荐方式） -->
        <local:TruncateConverter x:Key="TruncateConverter" MaxLength="7"/>

        <!-- 类型转中文的转换器 -->
        <local:NoteTypeToChineseConverter x:Key="TypeConverter"/>

        <!-- 提供缺失的样式，避免 XAML 解析错误 -->
        <Style x:Key="ThumbnailDateStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="#666666" />
        </Style>

        <Style x:Key="ThumbnailTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="#333333" />
            <Setter Property="Margin" Value="0,2,0,0" />
        </Style>

        <!-- 激活状态边框样式触发器 -->
        <Style x:Key="ThumbnailBorderStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsActive}" Value="True">
                    <Setter Property="BorderBrush" Value="#4CAF50"/>
                    <Setter Property="BorderThickness" Value="2"/>
                    <Setter Property="Background" Value="#F4FFF6"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border Style="{StaticResource ThumbnailBorderStyle}" CornerRadius="8" Padding="12">
        <!-- 绑定点击方法 -->
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="MouseLeftButtonUp">
                <i:InvokeCommandAction Command="{Binding OnClickCommand}" />
            </i:EventTrigger>
        </i:Interaction.Triggers>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" VerticalAlignment="Top">
                <!-- 日期和类型并排 -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="{Binding CreateDate,StringFormat='{}{0:yyyy-MM-dd}'}"
                               Style="{StaticResource ThumbnailDateStyle}"/>
                    
                    <TextBlock Grid.Column="1"
                               Text="{Binding Type, Converter={StaticResource TypeConverter}}"
                               HorizontalAlignment="Right"/>
                </Grid>

                <!-- 标题 -->
                <TextBlock Text="{Binding Title}"
                           Style="{StaticResource ThumbnailTextStyle}"
                           FontWeight="SemiBold"
                           TextTrimming="CharacterEllipsis"/>

                <!-- 内容预览：限制显示高度约两行，超出使用裁剪并添加省略号（通过绑定预处理） -->
                <TextBlock Text="{Binding ContentPreview}"
                           Style="{StaticResource ThumbnailTextStyle}"
                           TextWrapping="Wrap"
                           TextTrimming="CharacterEllipsis"/>
            </StackPanel>

            <!-- 左下角任务完成状态（仅任务列表显示） -->
            <TextBlock Grid.Row="1"
                       Text="{Binding ListCompletionText}"
                       FontSize="11"
                       Foreground="#4CAF50"
                       VerticalAlignment="Bottom"
                       HorizontalAlignment="Left"
                       Margin="0,4,0,0">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Type}" Value="List">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Setter Property="Foreground" Value="#FF4CAF50"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>
    </Border>
</UserControl>
<UserControl x:Class="CyberNote.Views.ListCardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:CyberNote.Views"
             mc:Ignorable="d" 
             d:DesignHeight="240" d:DesignWidth="320"
             x:Name="Root">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="bd" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5" SnapsToDevicePixels="True" Padding="0">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="bd" Property="BorderBrush" Value="#66C17A"/>
                            <Setter TargetName="bd" Property="Background" Value="#F8FFFA"/>
                            <Setter TargetName="bd" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="#AA66C17A" BlurRadius="5" ShadowDepth="0" Opacity="0.6"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="bd" Property="Background" Value="#E8F5E9"/>
                            <Setter TargetName="bd" Property="BorderBrush" Value="#4CAF50"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="bd" Property="Opacity" Value="0.6"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        </Style>
    </UserControl.Resources>
    <Border Background="White" Padding="12" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 顶部：标题 -->
            <!-- 查看模式 -->
            <TextBlock Grid.Row="0"
                       Text="{Binding Title}"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="#2C3E50"
                       TextTrimming="CharacterEllipsis"
                       MouseLeftButtonDown="TitleTextBlock_MouseLeftButtonDown"
                       Cursor="Hand">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsTitleEditMode, ElementName=Root}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            
            <!-- 编辑模式 -->
            <TextBox Grid.Row="0"
                     Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                     FontSize="18"
                     FontWeight="SemiBold"
                     Foreground="#2C3E50"
                     BorderBrush="#4CAF50"
                     BorderThickness="0,0,0,2"
                     Background="Transparent"
                     LostFocus="TitleTextBox_LostFocus"
                     KeyDown="TitleTextBox_KeyDown"
                     Visibility="{Binding IsTitleEditMode, ElementName=Root, Converter={StaticResource BoolToVis}}"
                     x:Name="TitleTextBox"/>

            <!-- 中间：任务列表（可滚动） -->
            <views:TaskListView Grid.Row="1"
                                 Margin="0,8,0,8"
                                 Tasks="{Binding Tasks}"/>
            

            <!-- 底部：创建日期与完成状态（Progress 字段若无可替换为其他信息） -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding createDate, StringFormat='{}{0:yyyy-MM-dd}'}"
                           Foreground="#666666"
                           FontSize="12"/>

                <Button Grid.Column="1"
                        Content="新增任务" 
                        Height="20" 
                        Style="{StaticResource PrimaryButton}" 
                        Click="AddTaskBtn_Clicked" 
                        x:Name="AddTaskBtn"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>
